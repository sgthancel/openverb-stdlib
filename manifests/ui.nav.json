{
  "family": "ui.nav",
  "version": "1.0.0",
  "verbs": [
    {
      "id": "ui.nav.list_pages",
      "version": "1.0.0",
      "summary": "List all navigable pages/routes in the app. Use this so the AI knows what pages exist and can propose navigation.",
      "input": { "type": "object", "properties": {}, "required": [] },
      "output": {
        "type": "object",
        "properties": {
          "routes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string", "description": "Stable route identifier" },
                "title": { "type": "string", "description": "Human-readable page name" },
                "path": { "type": "string", "description": "URL path" },
                "tags": {
                  "type": "array",
                  "items": { "type": "string" },
                  "description": "Keywords for semantic search"
                },
                "requiresAuth": { "type": "boolean", "description": "Whether login is required" }
              }
            }
          }
        }
      }
    },
    {
      "id": "ui.nav.go",
      "version": "1.0.0",
      "summary": "Navigate to a page. Pass routeId (from list_pages) or path. Client applies navigation when verb succeeds.",
      "input": {
        "type": "object",
        "properties": {
          "routeId": { "type": "string", "description": "Route id from ui.nav.list_pages" },
          "path": { "type": "string", "description": "Direct path (e.g. for dynamic routes)" }
        },
        "required": []
      },
      "output": {
        "type": "object",
        "properties": { "success": { "type": "boolean" }, "path": { "type": "string" } }
      }
    },
    {
      "id": "ui.nav.back",
      "version": "1.0.0",
      "summary": "Navigate back in browser history",
      "input": { "type": "object", "properties": {}, "required": [] },
      "output": { "type": "object", "properties": { "success": { "type": "boolean" } } }
    }
  ]
}
